{
  "name": "nodejs-first-class-api",
  "version": "1.0.0",
  "description": "A first class REST API",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run build:dev",
    "serve": "node dist/index.js",
    "build": "npm run build:clean && npm run build:ts && npm run tslint",
    "build:clean": "rimraf dist",
    "build:dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "build:ts": "tsc",
    "tslint": "tslint -t stylish -c tslint.json -p tsconfig.json",
    "tslint:dev": "tslint -t stylish -c tslint.json -p tsconfig.json --force --fix",
    "tslint:fix": "tslint -t stylish -c tslint.json -p tsconfig.json --fix",
    "test": "mocha -r ts-node/register test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rick-roche/nodejs-first-class-api.git"
  },
  "keywords": [
    "nodejs",
    "rest",
    "api",
    "typescript"
  ],
  "author": "Rick Roch√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rick-roche/nodejs-first-class-api/issues"
  },
  "homepage": "https://github.com/rick-roche/nodejs-first-class-api#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-things": "0.0.33",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.30",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "chai-things": "^0.2.0",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.5",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "koa": "^2.5.1",
    "koa-router": "^7.4.0",
    "winston": "^3.0.0"
  }
}
